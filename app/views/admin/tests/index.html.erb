<h1><%= t('.header') %></h1>
<%= button_to t('.new_test'), new_admin_test_path, class: "btn btn-success mb-2", method: :get %>
<table class="table table-bordered">
  <thead class="thead-light" align="center">
    <th class="sort-by-title pointer">
      <%= t('.title') %>
      <%= octicon 'arrow-up', class: 'text-success hide' %>
      <%= octicon 'arrow-down', class: 'text-success hide' %>
    </th>
    <th><%= t('.level') %></th>
    <th><%= t('.questions') %></th>
    <th colspan="3"><%= t('.actions') %></th>
  </thead>

  <tbody>
    <%= render @tests %>
  </tbody>
</table>
