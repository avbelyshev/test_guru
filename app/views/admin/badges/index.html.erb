<h1><%= t('.header') %></h1>

<%= button_to t('.new_badge'), new_admin_badge_path, class: "btn btn-success mb-2", method: :get %>

<%= render 'shared/errors', resource: @badge %>

<table class="table table-bordered">
  <thead class="thead-light" align="center">
    <th><%= t('activerecord.attributes.badge.name') %></th>
    <th><%= t('activerecord.attributes.badge.image_file') %></th>
    <th><%= t('activerecord.attributes.badge.rule_type') %></th>
    <th><%= t('activerecord.attributes.badge.rule_value') %></th>
    <th colspan="3"><%= t('.actions') %></th>
  </thead>

  <tbody>
    <%= render @badges %>
  </tbody>
</table>
