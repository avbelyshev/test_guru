<tr>
  <td class="text-center"><%= badge.name %></td>
  <td class="text-center"><%= badge.image_file %></td>
  <td class="text-center"><%= badge.rule_type %></td>
  <td class="text-center"><%= badge.rule_value %></td>
  <td class="text-center">
    <%= link_to t('.show'), admin_badge_path(badge) %>
  </td>
  <td class="text-center">
    <%= link_to t('.edit'), edit_admin_badge_path(badge) %>
  </td>
  <td class="text-center">
    <%= link_to t('.delete'), admin_badge_path(badge),
                  method: :delete,
                  data: { confirm: t('.delete_confirm') } %>
  </td>
</tr>
